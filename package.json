{
  "name": "terminliste",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro check && astro build",
    "build:fresh": "npm run refresh && astro check && astro build",
    "preview": "astro preview",
    "astro": "astro",
    "test": "npm run test:unit && npm run test:e2e",
    "test:e2e": "playwright test",
    "test:unit": "vitest run",
    "test:ui": "playwright test --ui",
    "refresh": "npx tsx src/scripts/fetchAllTeamsData.ts",
    "update-results": "npx tsx src/scripts/updateResults.ts",
    "fetch-tables": "npx tsx src/scripts/fetchTables.ts",
    "build:update": "npm run update-results && astro check && astro build",
    "postinstall": "npx playwright install --with-deps chromium"
  },
  "dependencies": {
    "astro": "^4.16.18",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@playwright/test": "^1.48.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2",
    "vitest": "^3.2.4"
  }
}
