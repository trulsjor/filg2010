---
import * as fs from 'fs';
import * as path from 'path';

interface Match {
  Lag?: string;
  Dato: string;
  Tid: string;
  Kampnr: string;
  Hjemmelag: string;
  Bortelag: string;
  'H-B': string;
  Bane: string;
  Tilskuere: string;
  Arrangør: string;
  Turnering: string;
  'Kamp URL'?: string;
  'Hjemmelag URL'?: string;
  'Bortelag URL'?: string;
  'Turnering URL'?: string;
}

interface Metadata {
  lastUpdated: string;
  teamsCount: number;
  matchesCount: number;
}

interface Team {
  name: string;
  lagid: string;
  seasonId: string;
  color: string;
}

interface Config {
  teams: Team[];
}

// Load config for team colors
const configPath = path.join(process.cwd(), 'config.json');
let teamColors: Map<string, string> = new Map();

if (fs.existsSync(configPath)) {
  try {
    const config: Config = JSON.parse(fs.readFileSync(configPath, 'utf-8'));
    config.teams.forEach(team => {
      teamColors.set(team.name, team.color);
    });
  } catch (e) {
    console.error('Error reading config.json:', e);
  }
}

// Helper function to get team color
const getTeamColor = (teamName?: string): string => {
  if (!teamName) return '#10b981';
  return teamColors.get(teamName) || '#10b981';
};

// Load match data from JSON
const dataPath = path.join(process.cwd(), 'data', 'terminliste.json');

let matches: Match[] = [];
let metadata: Metadata | null = null;

// Load metadata
const metadataPath = path.join(process.cwd(), 'data', 'metadata.json');
if (fs.existsSync(metadataPath)) {
  try {
    metadata = JSON.parse(fs.readFileSync(metadataPath, 'utf-8'));
  } catch (e) {
    console.error('Error reading metadata.json:', e);
  }
}

// Load matches
if (fs.existsSync(dataPath)) {
  try {
    matches = JSON.parse(fs.readFileSync(dataPath, 'utf-8'));
  } catch (e) {
    console.error('Error reading terminliste.json:', e);
  }
}

// Check if we have multiple teams
const hasMultipleTeams = metadata && metadata.teamsCount > 1;

// Always have links in the new system
const hasLinks = true;

const formattedLastUpdated = metadata?.lastUpdated
  ? new Date(metadata.lastUpdated).toLocaleString('no-NO', {
      day: '2-digit',
      month: '2-digit',
      year: 'numeric',
      hour: '2-digit',
      minute: '2-digit',
    })
  : null;
---

<!DOCTYPE html>
<html lang="no">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Terminliste - Fjellhammer</title>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
      background: radial-gradient(circle at top, #031a10 0%, #020b05 60%, #010503 100%);
      min-height: 100vh;
      padding: 2.5rem 1rem;
      color: #f6fff8;
    }

    main {
      max-width: 1400px;
      margin: 0 auto;
      background: transparent;
      border-radius: 1rem;
      padding: 2rem;
    }

    .page-header {
      display: flex;
      align-items: center;
      gap: 1.25rem;
      margin-bottom: 2.5rem;
    }

    .page-header img {
      width: 72px;
      height: 72px;
      border-radius: 16px;
      padding: 0.5rem;
      background: rgba(255, 255, 255, 0.04);
      border: 1px solid rgba(255, 255, 255, 0.08);
      box-shadow: 0 15px 35px rgba(10, 200, 130, 0.25);
    }

    .page-header h1 {
      font-size: clamp(2rem, 4vw, 3rem);
      color: #f6fff8;
      line-height: 1.1;
    }

    .page-header span {
      text-transform: uppercase;
      letter-spacing: 0.25em;
      font-size: 0.85rem;
      color: #a7c0b3;
      display: block;
    }

    .table-container {
      overflow-x: auto;
      margin-top: 1rem;
      background: rgba(7, 21, 14, 0.9);
      border-radius: 1.25rem;
      padding: 1.75rem;
      box-shadow: 0 25px 55px rgba(0, 0, 0, 0.45);
      border: 1px solid rgba(16, 185, 129, 0.15);
    }

    .card-container {
      display: none;
    }

    .match-card {
      background: rgba(6, 17, 11, 0.9);
      border-radius: 1.25rem;
      padding: 1.5rem;
      margin-bottom: 1.25rem;
      box-shadow: 0 18px 40px rgba(0, 0, 0, 0.45);
      border: 1px solid rgba(16, 185, 129, 0.2);
      transition: transform 0.2s, box-shadow 0.2s;
    }

    .match-card:hover {
      transform: translateY(-2px);
      box-shadow: 0 6px 20px rgba(0, 0, 0, 0.4), 0 0 0 2px rgba(16, 185, 129, 0.3);
    }

    .card-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 0.75rem;
      padding-bottom: 0.75rem;
      border-bottom: 1px solid rgba(16, 185, 129, 0.2);
    }

    .card-date-time {
      display: flex;
      flex-direction: column;
      font-weight: 600;
      color: #0fd18a;
    }

    .card-date {
      font-size: 1rem;
    }

    .card-time {
      font-size: 0.9rem;
      color: #82ffd2;
    }

    .card-team-indicator {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      font-size: 0.85rem;
      font-weight: 600;
      color: #f6fff8;
      background: rgba(16, 185, 129, 0.18);
      padding: 0.35rem 0.9rem;
      border-radius: 999px;
    }

    .card-team-dot {
      width: 10px;
      height: 10px;
      border-radius: 50%;
      box-shadow: 0 0 8px currentColor;
    }

    .card-match {
      margin-bottom: 0.75rem;
    }

    .card-teams {
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 0.5rem;
      font-size: 1rem;
      font-weight: 600;
      margin-bottom: 0.5rem;
      color: #f6fff8;
    }

    .card-teams a,
    .card-teams span {
      max-width: 150px;
      overflow: hidden;
      text-overflow: ellipsis;
      white-space: nowrap;
      display: inline-block;
    }

    .card-teams a {
      color: #6ff3c5;
    }

    .card-teams a:hover {
      color: white;
    }

    .card-score {
      text-align: center;
      font-size: 1.6rem;
      font-weight: 700;
      color: #f6fff8;
      margin: 0.65rem 0;
      letter-spacing: 0.15em;
    }

    .card-info {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 0.8rem;
      font-size: 0.85rem;
      margin-top: 0.9rem;
      padding-top: 0.9rem;
      border-top: 1px solid rgba(255, 255, 255, 0.06);
    }

    .card-info-item {
      display: flex;
      flex-direction: column;
      background: rgba(255, 255, 255, 0.04);
      padding: 0.65rem;
      border-radius: 0.65rem;
      border: 1px solid rgba(255, 255, 255, 0.06);
    }

    .card-info-label {
      font-size: 0.7rem;
      text-transform: uppercase;
      color: #7aecc4;
      margin-bottom: 0.25rem;
      letter-spacing: 0.08em;
    }

    .card-info-value {
      color: #f6fff8;
      font-weight: 600;
    }

    .card-links {
      display: flex;
      gap: 0.5rem;
      margin-top: 0.75rem;
    }

    .card-link {
      flex: 1;
      text-align: center;
      padding: 0.85rem 1rem;
      background: linear-gradient(135deg, #10b981 0%, #0b7a55 100%);
      color: white;
      border-radius: 0.85rem;
      font-size: 0.9rem;
      font-weight: 600;
      text-decoration: none;
      transition: all 0.2s;
      box-shadow: 0 4px 18px rgba(16, 185, 129, 0.35);
      letter-spacing: 0.08em;
      text-transform: uppercase;
    }

    .card-link:hover {
      transform: translateY(-1px);
      box-shadow: 0 8px 20px rgba(16, 185, 129, 0.5);
      color: white;
      text-decoration: none;
    }

    .card-tournament {
      margin-top: 0.9rem;
      font-size: 0.85rem;
      color: #c1d7cc;
      text-align: center;
    }

    .card-tournament a {
      color: #6ff3c5;
      font-weight: 500;
    }

    table {
      width: 100%;
      border-collapse: separate;
      border-spacing: 0;
      font-size: 0.9rem;
      background: rgba(0, 0, 0, 0.2);
      border-radius: 0.5rem;
      overflow: hidden;
    }

    thead {
      background: rgba(16, 185, 129, 0.1);
      color: #10b981;
    }

    th {
      padding: 1rem 0.75rem;
      text-align: left;
      font-weight: 700;
      text-transform: uppercase;
      font-size: 0.75rem;
      letter-spacing: 0.1em;
      white-space: nowrap;
      border-bottom: 2px solid rgba(16, 185, 129, 0.3);
      text-shadow: 0 0 10px rgba(16, 185, 129, 0.3);
    }

    tbody tr {
      border-bottom: 1px solid rgba(16, 185, 129, 0.1);
      transition: all 0.2s;
      background: rgba(0, 0, 0, 0.2);
    }

    tbody tr:hover {
      background: rgba(16, 185, 129, 0.1);
      transform: scale(1.01);
      box-shadow: 0 0 20px rgba(16, 185, 129, 0.2);
    }

    tbody tr:last-child {
      border-bottom: none;
    }

    td {
      padding: 1rem 0.75rem;
      color: #e5e7eb;
    }

    .team-indicator {
      display: inline-block;
      width: 10px;
      height: 10px;
      border-radius: 50%;
      margin-right: 0.5rem;
      vertical-align: middle;
      box-shadow: 0 0 8px currentColor;
    }

    .team-name {
      font-weight: 600;
      font-size: 0.85rem;
      color: #e5e7eb;
    }

    .last-updated {
      text-align: center;
      color: #a7c0b3;
      font-size: 0.95rem;
      margin-top: 1.75rem;
    }

    td:nth-child(1) {
      text-align: center;
    }

    td:nth-child(2), td:nth-child(3) {
      font-weight: 700;
      color: #10b981;
      text-shadow: 0 0 8px rgba(16, 185, 129, 0.3);
    }

    td:nth-child(4), td:nth-child(5) {
      font-weight: 500;
      color: #e5e7eb;
      max-width: 200px;
      overflow: hidden;
      text-overflow: ellipsis;
      white-space: nowrap;
    }

    td:nth-child(6) {
      font-weight: 700;
      color: #10b981;
      text-shadow: 0 0 10px rgba(16, 185, 129, 0.4);
      font-size: 1.1rem;
    }

    a {
      color: #10b981;
      text-decoration: none;
      transition: color 0.2s;
    }

    a:hover {
      color: #34d399;
      text-decoration: underline;
    }

    .match-link {
      display: inline-block;
      padding: 0.35rem 0.75rem;
      background: linear-gradient(135deg, #10b981 0%, #059669 100%);
      color: white;
      border-radius: 0.5rem;
      font-size: 0.8rem;
      font-weight: 600;
      text-decoration: none;
      transition: all 0.2s;
      box-shadow: 0 2px 8px rgba(16, 185, 129, 0.3);
      text-shadow: none;
      letter-spacing: 0.05em;
    }

    .match-link:hover {
      transform: translateY(-1px);
      box-shadow: 0 4px 12px rgba(16, 185, 129, 0.5);
      text-decoration: none;
      color: white;
    }

    p {
      text-align: center;
      color: #9ca3af;
      padding: 2rem;
      font-size: 1.1rem;
    }

    @media (max-width: 1200px) {
      h1 {
        font-size: 2rem;
      }

      table {
        font-size: 0.85rem;
      }

      th, td {
        padding: 0.75rem 0.5rem;
      }
    }

    @media (max-width: 768px) {
      body {
        padding: 1rem 0.5rem;
      }

      main {
        padding: 1rem;
        background: transparent;
        box-shadow: none;
      }

      h1 {
        font-size: 1.5rem;
        margin-bottom: 1rem;
        color: white;
      }

      .table-container {
        display: none;
      }

      .card-container {
        display: block;
      }

      .last-updated {
        color: white;
      }
    }
  </style>
</head>
<body>
  <main>
    <header class="page-header">
      <img src="/fjellhammer-logo.svg" alt="Fjellhammer IL" width="72" height="72" loading="lazy" />
      <div>
        <span>Fjellhammer IL</span>
        <h1>Terminliste{hasMultipleTeams ? ' • Alle lag' : ''}</h1>
      </div>
    </header>

{matches.length > 0 ? (
      <>
        <div class="table-container">
          <table>
            <thead>
              <tr>
                {hasMultipleTeams && <th>Lag</th>}
                <th>Dato</th>
                <th>Tid</th>
                <th>Hjemmelag</th>
                <th>Bortelag</th>
                <th>H-B</th>
                <th>Bane</th>
                <th>Turnering</th>
                {hasLinks && <th>Kamp</th>}
              </tr>
            </thead>
            <tbody>
              {matches.map((match) => (
                <tr>
                  {hasMultipleTeams && (
                    <td>
                      <span class="team-indicator" style={`background-color: ${getTeamColor(match.Lag)}`}></span>
                      <span class="team-name">{match.Lag}</span>
                    </td>
                  )}
                  <td>{match.Dato}</td>
                  <td>{match.Tid}</td>
                  <td>
                    {match['Hjemmelag URL'] ? (
                      <a href={match['Hjemmelag URL']} target="_blank" rel="noopener noreferrer">
                        {match.Hjemmelag}
                      </a>
                    ) : (
                      match.Hjemmelag
                    )}
                  </td>
                  <td>
                    {match['Bortelag URL'] ? (
                      <a href={match['Bortelag URL']} target="_blank" rel="noopener noreferrer">
                        {match.Bortelag}
                      </a>
                    ) : (
                      match.Bortelag
                    )}
                  </td>
                  <td>{match['H-B']}</td>
                  <td>{match.Bane}</td>
                  <td>
                    {match['Turnering URL'] ? (
                      <a href={match['Turnering URL']} target="_blank" rel="noopener noreferrer">
                        {match.Turnering}
                      </a>
                    ) : (
                      match.Turnering
                    )}
                  </td>
                  {hasLinks && (
                    <td>
                      {match['Kamp URL'] ? (
                        <a href={match['Kamp URL']} target="_blank" rel="noopener noreferrer" class="match-link">
                          Se kamp
                        </a>
                      ) : (
                        <span>-</span>
                      )}
                    </td>
                  )}
                </tr>
              ))}
            </tbody>
          </table>
        </div>

        <div class="card-container">
          {matches.map((match) => (
            <div class="match-card">
              <div class="card-header">
                <div class="card-date-time">
                  <span class="card-date">{match.Dato}</span>
                  <span class="card-time">{match.Tid}</span>
                </div>
                {hasMultipleTeams && (
                  <div class="card-team-indicator">
                    <span class="card-team-dot" style={`background-color: ${getTeamColor(match.Lag)}`}></span>
                    <span>{match.Lag}</span>
                  </div>
                )}
              </div>

              <div class="card-match">
                <div class="card-teams">
                  {match['Hjemmelag URL'] ? (
                    <a href={match['Hjemmelag URL']} target="_blank" rel="noopener noreferrer">
                      {match.Hjemmelag}
                    </a>
                  ) : (
                    <span>{match.Hjemmelag}</span>
                  )}
                  <span>-</span>
                  {match['Bortelag URL'] ? (
                    <a href={match['Bortelag URL']} target="_blank" rel="noopener noreferrer">
                      {match.Bortelag}
                    </a>
                  ) : (
                    <span>{match.Bortelag}</span>
                  )}
                </div>
                {match['H-B'] && match['H-B'] !== '-' && (
                  <div class="card-score">{match['H-B']}</div>
                )}
              </div>

              <div class="card-info">
                <div class="card-info-item">
                  <span class="card-info-label">Bane</span>
                  <span class="card-info-value">{match.Bane}</span>
                </div>
                <div class="card-info-item">
                  <span class="card-info-label">Tilskuere</span>
                  <span class="card-info-value">{match.Tilskuere || '-'}</span>
                </div>
              </div>

              {match['Turnering'] && (
                <div class="card-tournament">
                  {match['Turnering URL'] ? (
                    <a href={match['Turnering URL']} target="_blank" rel="noopener noreferrer">
                      {match.Turnering}
                    </a>
                  ) : (
                    <span>{match.Turnering}</span>
                  )}
                </div>
              )}

              {match['Kamp URL'] && (
                <div class="card-links">
                  <a href={match['Kamp URL']} target="_blank" rel="noopener noreferrer" class="card-link">
                    Se kampdetaljer
                  </a>
                </div>
              )}
            </div>
          ))}
        </div>

        {formattedLastUpdated && (
          <div class="last-updated">
            Sist oppdatert: {formattedLastUpdated}
            {hasMultipleTeams && ` • ${metadata?.teamsCount ?? matches.length} lag • ${metadata?.matchesCount ?? matches.length} kamper`}
          </div>
        )}
      </>
    ) : (
      <p>Ingen kamper funnet. Kjør data-henting først.</p>
    )}
  </main>
</body>
</html>
