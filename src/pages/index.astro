import * as fs from 'fs';
import * as path from 'path';

interface Match {
  Lag?: string;
  'Lag Farge'?: string;
  Dato: string;
  Tid: string;
  Kampnr: string;
  Hjemmelag: string;
  Bortelag: string;
  'H-B': string;
  Bane: string;
  Tilskuere: string;
  Arrangør: string;
  Turnering: string;
  'Kamp URL'?: string;
  'Hjemmelag URL'?: string;
  'Bortelag URL'?: string;
  'Turnering URL'?: string;
}

interface Metadata {
  lastUpdated: string;
  teamsCount: number;
  matchesCount: number;
}

// Try to read multi-team CSV first, then single-team CSVs
const multiTeamCsvPath = path.join(process.cwd(), 'data', 'terminliste-alle-lag.csv');
const singleTeamCsvPath = path.join(process.cwd(), 'data', 'terminliste-med-lenker.csv');
const fallbackCsvPath = path.join(process.cwd(), 'data', 'terminliste.csv');

let matches: Match[] = [];
let metadata: Metadata | null = null;
let hasMultipleTeams = false;

// Try to load metadata
const metadataPath = path.join(process.cwd(), 'data', 'metadata.json');
if (fs.existsSync(metadataPath)) {
  try {
    metadata = JSON.parse(fs.readFileSync(metadataPath, 'utf-8'));
  } catch (e) {}
}

// Determine which CSV to read
let pathToRead = fallbackCsvPath;
if (fs.existsSync(multiTeamCsvPath)) {
  pathToRead = multiTeamCsvPath;
  hasMultipleTeams = true;
} else if (fs.existsSync(singleTeamCsvPath)) {
  pathToRead = singleTeamCsvPath;
}

const hasLinks = fs.existsSync(singleTeamCsvPath) || hasMultipleTeams;

if (fs.existsSync(pathToRead)) {
  const csvContent = fs.readFileSync(pathToRead, 'utf-8');
  const lines = csvContent.trim().split('\n');

  if (lines.length > 1) {
    const headers = lines[0].split(',');

    // Parse CSV rows
    for (let i = 1; i < lines.length; i++) {
      const values = lines[i].split(',');
      const match: any = {};

      headers.forEach((header, index) => {
        match[header] = values[index] || '';
      });

      matches.push(match as Match);
    }
  }
}
