---
import * as fs from 'fs';
import * as path from 'path';

interface Match {
  Lag?: string;
  'Lag Farge'?: string;
  Dato: string;
  Tid: string;
  Kampnr: string;
  Hjemmelag: string;
  Bortelag: string;
  'H-B': string;
  Bane: string;
  Tilskuere: string;
  Arrangør: string;
  Turnering: string;
  'Kamp URL'?: string;
  'Hjemmelag URL'?: string;
  'Bortelag URL'?: string;
  'Turnering URL'?: string;
}

interface Metadata {
  lastUpdated: string;
  teamsCount: number;
  matchesCount: number;
}

// Try to read multi-team CSV first, then single-team CSVs
const multiTeamCsvPath = path.join(process.cwd(), 'data', 'terminliste-alle-lag.csv');
const singleTeamCsvPath = path.join(process.cwd(), 'data', 'terminliste-med-lenker.csv');
const fallbackCsvPath = path.join(process.cwd(), 'data', 'terminliste.csv');

let matches: Match[] = [];
let metadata: Metadata | null = null;
let hasMultipleTeams = false;

// Try to load metadata
const metadataPath = path.join(process.cwd(), 'data', 'metadata.json');
if (fs.existsSync(metadataPath)) {
  try {
    metadata = JSON.parse(fs.readFileSync(metadataPath, 'utf-8'));
  } catch (e) {}
}

// Determine which CSV to read
let pathToRead = fallbackCsvPath;
if (fs.existsSync(multiTeamCsvPath)) {
  pathToRead = multiTeamCsvPath;
  hasMultipleTeams = true;
} else if (fs.existsSync(singleTeamCsvPath)) {
  pathToRead = singleTeamCsvPath;
}

const hasLinks = fs.existsSync(singleTeamCsvPath) || hasMultipleTeams;

if (fs.existsSync(pathToRead)) {
  const csvContent = fs.readFileSync(pathToRead, 'utf-8');
  const lines = csvContent.trim().split('\n');

  if (lines.length > 1) {
    const headers = lines[0].split(',');

    // Parse CSV rows
    for (let i = 1; i < lines.length; i++) {
      const values = lines[i].split(',');
      const match: any = {};

      headers.forEach((header, index) => {
        match[header] = values[index] || '';
      });

      matches.push(match as Match);
    }
  }
}
---

<!DOCTYPE html>
<html lang="no">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Terminliste - Fjellhammer</title>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      min-height: 100vh;
      padding: 2rem 1rem;
    }

    main {
      max-width: 1400px;
      margin: 0 auto;
      background: white;
      border-radius: 1rem;
      box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
      padding: 2rem;
    }

    h1 {
      color: #333;
      margin-bottom: 2rem;
      text-align: center;
      font-size: 2.5rem;
      font-weight: 700;
    }

    .table-container {
      overflow-x: auto;
      margin-top: 1rem;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      font-size: 0.9rem;
    }

    thead {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      color: white;
    }

    th {
      padding: 1rem 0.75rem;
      text-align: left;
      font-weight: 600;
      text-transform: uppercase;
      font-size: 0.75rem;
      letter-spacing: 0.05em;
      white-space: nowrap;
    }

    tbody tr {
      border-bottom: 1px solid #e5e7eb;
      transition: background-color 0.2s;
    }

    tbody tr:hover {
      background-color: #f9fafb;
    }

    tbody tr:last-child {
      border-bottom: none;
    }

    td {
      padding: 1rem 0.75rem;
      color: #374151;
    }

    .team-indicator {
      display: inline-block;
      width: 8px;
      height: 8px;
      border-radius: 50%;
      margin-right: 0.5rem;
      vertical-align: middle;
    }

    .team-name {
      font-weight: 600;
      font-size: 0.85rem;
    }

    .last-updated {
      text-align: center;
      color: #6b7280;
      font-size: 0.875rem;
      margin-top: 1rem;
      padding: 0.5rem;
    }

    td:nth-child(1) {
      text-align: center;
    }

    td:nth-child(2), td:nth-child(3) {
      font-weight: 600;
      color: #667eea;
    }

    td:nth-child(4), td:nth-child(5) {
      font-weight: 500;
    }

    td:nth-child(6) {
      font-weight: 700;
      color: #764ba2;
    }

    a {
      color: #667eea;
      text-decoration: none;
      transition: color 0.2s;
    }

    a:hover {
      color: #764ba2;
      text-decoration: underline;
    }

    .match-link {
      display: inline-block;
      padding: 0.25rem 0.5rem;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      color: white;
      border-radius: 0.25rem;
      font-size: 0.8rem;
      font-weight: 500;
      text-decoration: none;
      transition: opacity 0.2s;
    }

    .match-link:hover {
      opacity: 0.8;
      text-decoration: none;
      color: white;
    }

    p {
      text-align: center;
      color: #6b7280;
      padding: 2rem;
      font-size: 1.1rem;
    }

    @media (max-width: 1200px) {
      h1 {
        font-size: 2rem;
      }

      table {
        font-size: 0.85rem;
      }

      th, td {
        padding: 0.75rem 0.5rem;
      }
    }

    @media (max-width: 768px) {
      body {
        padding: 1rem 0.5rem;
      }

      main {
        padding: 1rem;
      }

      h1 {
        font-size: 1.5rem;
        margin-bottom: 1rem;
      }

      table {
        font-size: 0.75rem;
      }

      th, td {
        padding: 0.5rem 0.25rem;
      }

      th {
        font-size: 0.65rem;
      }
    }
  </style>
</head>
<body>
  <main>
    <h1>Terminliste{hasMultipleTeams ? ' - Alle lag' : ' - Fjellhammer'}</h1>

    {matches.length > 0 ? (
      <div class="table-container">
        <table>
          <thead>
            <tr>
              {hasMultipleTeams && <th>Lag</th>}
              <th>Dato</th>
              <th>Tid</th>
              <th>Hjemmelag</th>
              <th>Bortelag</th>
              <th>H-B</th>
              <th>Bane</th>
              <th>Turnering</th>
              {hasLinks && <th>Kamp</th>}
            </tr>
          </thead>
          <tbody>
            {matches.map((match) => (
              <tr>
                {hasMultipleTeams && (
                  <td>
                    <span class="team-indicator" style={`background-color: ${match['Lag Farge'] || '#667eea'}`}></span>
                    <span class="team-name">{match.Lag}</span>
                  </td>
                )}
                <td>{match.Dato}</td>
                <td>{match.Tid}</td>
                <td>
                  {match['Hjemmelag URL'] ? (
                    <a href={match['Hjemmelag URL']} target="_blank" rel="noopener noreferrer">
                      {match.Hjemmelag}
                    </a>
                  ) : (
                    match.Hjemmelag
                  )}
                </td>
                <td>
                  {match['Bortelag URL'] ? (
                    <a href={match['Bortelag URL']} target="_blank" rel="noopener noreferrer">
                      {match.Bortelag}
                    </a>
                  ) : (
                    match.Bortelag
                  )}
                </td>
                <td>{match['H-B']}</td>
                <td>{match.Bane}</td>
                <td>
                  {match['Turnering URL'] ? (
                    <a href={match['Turnering URL']} target="_blank" rel="noopener noreferrer">
                      {match.Turnering}
                    </a>
                  ) : (
                    match.Turnering
                  )}
                </td>
                {hasLinks && (
                  <td>
                    {match['Kamp URL'] ? (
                      <a href={match['Kamp URL']} target="_blank" rel="noopener noreferrer" class="match-link">
                        Se kamp
                      </a>
                    ) : (
                      <span>-</span>
                    )}
                  </td>
                )}
              </tr>
            ))}
          </tbody>
        </table>
        {metadata && (
          <div class="last-updated">
            Sist oppdatert: {new Date(metadata.lastUpdated).toLocaleString('no-NO', {
              day: '2-digit',
              month: '2-digit',
              year: 'numeric',
              hour: '2-digit',
              minute: '2-digit'
            })}
            {hasMultipleTeams && ` • ${metadata.teamsCount} lag • ${metadata.matchesCount} kamper`}
          </div>
        )}
      </div>
    ) : (
      <p>Ingen kamper funnet. Kjør data-henting først.</p>
    )}
  </main>
</body>
</html>
