        justify-content: center;
        font-size: 0.65rem;
        padding: 0.35rem 0.75rem;
      }

      .next-match-btn svg {
        width: 12px;
        height: 12px;
      }

      h1 {
        font-size: 1.5rem;
        margin-bottom: 1rem;
        color: white;
      }

      .table-container {
        display: none;
      }

      .card-container {
        display: block;
        padding: 0;
      }

      .match-card {
        margin-bottom: 1rem;
      }

      .last-updated {
        color: rgba(255, 255, 255, 0.8);
        font-size: 0.85rem;
        padding: 1rem;
        background: rgba(0, 155, 62, 0.05);
        border-radius: 0.75rem;
        border: 1px solid rgba(0, 155, 62, 0.15);
      }
    }
  </style>
</head>
<body>
  <main>
    <header class="page-header">
      <img src="/fjellhammer-logo.svg" alt="Fjellhammer IL" width="120" height="120" loading="lazy" />
      <div class="header-text">
        <span>Fjellhammer IL</span>
        <h1>G2010</h1>
      </div>
      <button id="scroll-to-next" class="next-match-btn" aria-label="G√• til neste kamp">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
          <polyline points="6 9 12 15 18 9"></polyline>
        </svg>
        <span>Neste kamp</span>
      </button>
    </header>

{matches.length > 0 ? (
      <>
        <div class="table-container">
          <table>
            <thead>
              <tr>
                {hasMultipleTeams && <th>Lag</th>}
                <th>Dato</th>
                <th>Tid</th>
                <th>Hjemmelag</th>
                <th>Bortelag</th>
                <th>H-B</th>
                <th>Bane</th>
                <th>Turnering</th>
                {hasLinks && <th>Kamp</th>}
              </tr>
            </thead>
            <tbody>
              {matches.map((match) => (
                <tr>
                  {hasMultipleTeams && (
                    <td>
                      <span class="team-indicator" style={`background-color: ${getTeamColor(match.Lag)}`}></span>
                      <span class="team-name">{match.Lag}</span>
                    </td>
                  )}
                  <td>{match.Dato}</td>
                  <td>{match.Tid}</td>
                  <td>
                    {match['Hjemmelag URL'] ? (
                      <a href={match['Hjemmelag URL']} target="_blank" rel="noopener noreferrer">
                        {match.Hjemmelag}
                      </a>
                    ) : (
                      match.Hjemmelag
                    )}
                  </td>
                  <td>
                    {match['Bortelag URL'] ? (
                      <a href={match['Bortelag URL']} target="_blank" rel="noopener noreferrer">
                        {match.Bortelag}
                      </a>
                    ) : (
                      match.Bortelag
                    )}
                  </td>
                  <td>{match['H-B'] && match['H-B'].trim() !== '' ? match['H-B'] : '-'}</td>
                  <td>{match.Bane}</td>
                  <td>
                    {match['Turnering URL'] ? (
                      <a href={match['Turnering URL']} target="_blank" rel="noopener noreferrer">
                        {match.Turnering}
                      </a>
                    ) : (
                      match.Turnering
                    )}
                  </td>
                  {hasLinks && (
                    <td>
                      {match['Kamp URL'] ? (
                        <a href={match['Kamp URL']} target="_blank" rel="noopener noreferrer" class="match-link">
                          Se kamp
                        </a>
                      ) : (
                        <span>-</span>
                      )}
                    </td>
                  )}
                </tr>
              ))}
            </tbody>
          </table>
        </div>

        <div class="card-container">
          {matches.map((match) => (
            <div
              class={`match-card${isFjellhammerWin(match) ? ' win-card' : ''}`}
              id={nextMatchId && nextMatchId === String(match.Kampnr || '').trim() ? 'next-match-card' : undefined}
            >
              <div class="card-header">
                <div class="card-date-time">
                  <span class="card-date">{match.Dato}</span>
                  <span class="card-time">{match.Tid}</span>
                </div>
                {hasMultipleTeams && (
                  <div class="card-team-indicator">
                    <span class="card-team-dot" style={`background-color: ${getTeamColor(match.Lag)}`}></span>
                    <span>{match.Lag}</span>
                  </div>
                )}
              </div>

              <div class="card-match">
                <div class="card-teams">
                  {match['Hjemmelag URL'] ? (
                    <a href={match['Hjemmelag URL']} target="_blank" rel="noopener noreferrer">
                      {match.Hjemmelag}
                    </a>
                  ) : (
                    <span>{match.Hjemmelag}</span>
                  )}
                  <span>-</span>
                  {match['Bortelag URL'] ? (
                    <a href={match['Bortelag URL']} target="_blank" rel="noopener noreferrer">
                      {match.Bortelag}
                    </a>
                  ) : (
                    <span>{match.Bortelag}</span>
                  )}
                </div>
                <div class="card-score">
                  {match['H-B'] && match['H-B'].trim() !== '' && match['H-B'] !== '-' ? match['H-B'] : '-'}
                </div>
              </div>

              <div class="card-info">
                <div class="card-info-item">
                  <span class="card-info-label">Bane</span>
                  <span class="card-info-value">{match.Bane}</span>
                </div>
                <div class="card-info-item">
                  <span class="card-info-label">Tilskuere</span>
                  <span class="card-info-value">{match.Tilskuere || '-'}</span>
                </div>
              </div>

              {match['Turnering'] && (
                <div class="card-tournament">
                  {match['Turnering URL'] ? (
                    <a href={match['Turnering URL']} target="_blank" rel="noopener noreferrer">
                      {match.Turnering}
                    </a>
                  ) : (
                    <span>{match.Turnering}</span>
                  )}
                </div>
              )}

              {match['Kamp URL'] && (
                <div class="card-links">
                  <a href={match['Kamp URL']} target="_blank" rel="noopener noreferrer" class="card-link">
                    Se kampdetaljer
                  </a>
                </div>
              )}
            </div>
          ))}
        </div>

        {formattedLastUpdated && (
          <div class="last-updated">
            Sist oppdatert: {formattedLastUpdated}
            {hasMultipleTeams && ` ‚Ä¢ ${metadata?.teamsCount ?? matches.length} lag ‚Ä¢ ${metadata?.matchesCount ?? matches.length} kamper`}
          </div>
        )}
      </>
    ) : (
      <p>Ingen kamper funnet. Kj√∏r data-henting f√∏rst.</p>
    )}
  </main>
  <script is:inline>
    function scrollToNextMatch() {
      const nextCard = document.getElementById('next-match-card');
      if (!nextCard) return;
      const header = document.querySelector('.page-header');
      const headerHeight =
        header && header instanceof HTMLElement ? header.offsetHeight : 0;
      const offset = headerHeight + 16;
      const cardTop = nextCard.getBoundingClientRect().top + window.scrollY;
      window.scrollTo({
        top: Math.max(cardTop - offset, 0),
        behavior: 'smooth',
      });
    }

    document.addEventListener('DOMContentLoaded', () => {
      // Auto-scroll on page load for mobile
      const prefersCards = window.matchMedia('(max-width: 768px)').matches;
      if (prefersCards) {
        // Delay scroll slightly to ensure DOM is fully rendered
        setTimeout(() => {
          scrollToNextMatch();
        }, 100);
      }

      // Add click handler to button
      const scrollBtn = document.getElementById('scroll-to-next');
      if (scrollBtn) {
        scrollBtn.addEventListener('click', scrollToNextMatch);
      }
    });
  </script>
</body>
</html>
