---
/**
 * Filter bar for filtering matches by team, location, and status
 */
interface Props {
  teamNames: string[];
}

const { teamNames } = Astro.props;
---

<nav class="filter-bar" aria-label="Filtrer kamper">
  <div class="filter-group" role="group" aria-labelledby="filter-team-label">
    <span id="filter-team-label" class="filter-group-label">Lag:</span>
    <button class="filter-btn active" data-filter="team" data-value="all" aria-pressed="true">Alle</button>
    {teamNames.map((teamName) => (
      <button class="filter-btn" data-filter="team" data-value={teamName} aria-pressed="false">{teamName}</button>
    ))}
  </div>
  <div class="filter-divider" aria-hidden="true"></div>
  <div class="filter-group" role="group" aria-labelledby="filter-location-label">
    <span id="filter-location-label" class="filter-group-label">Type:</span>
    <button class="filter-btn active" data-filter="location" data-value="all" aria-pressed="true">Alle</button>
    <button class="filter-btn" data-filter="location" data-value="home" aria-pressed="false">Hjemme</button>
    <button class="filter-btn" data-filter="location" data-value="away" aria-pressed="false">Borte</button>
  </div>
  <div class="filter-divider" aria-hidden="true"></div>
  <div class="filter-group" role="group" aria-labelledby="filter-status-label">
    <span id="filter-status-label" class="filter-group-label">Status:</span>
    <button class="filter-btn active" data-filter="status" data-value="all" aria-pressed="true">Alle</button>
    <button class="filter-btn" data-filter="status" data-value="upcoming" aria-pressed="false">Kommende</button>
    <button class="filter-btn" data-filter="status" data-value="played" aria-pressed="false">Spilte</button>
  </div>
</nav>

<style>
  .filter-bar {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 1.5rem;
    padding: 1rem;
    background: rgba(5, 17, 11, 0.8);
    border-radius: 0.75rem;
    border: 1px solid rgba(255, 255, 255, 0.05);
  }

  .filter-group {
    display: flex;
    align-items: center;
    gap: 0.25rem;
  }

  .filter-group-label {
    font-size: 0.7rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: rgba(246, 255, 248, 0.5);
    margin-right: 0.5rem;
  }

  .filter-btn {
    padding: 0.4rem 0.75rem;
    background: rgba(0, 155, 62, 0.1);
    color: rgba(246, 255, 248, 0.6);
    border: 1px solid rgba(0, 196, 106, 0.15);
    border-radius: 0.4rem;
    font-size: 0.7rem;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.2s ease;
  }

  .filter-btn:hover {
    background: rgba(0, 155, 62, 0.2);
    color: rgba(246, 255, 248, 0.8);
  }

  .filter-btn:focus {
    outline: 2px solid var(--accent-light, #00C46A);
    outline-offset: 2px;
  }

  .filter-btn:focus:not(:focus-visible) {
    outline: none;
  }

  .filter-btn:focus-visible {
    outline: 2px solid var(--accent-light, #00C46A);
    outline-offset: 2px;
  }

  .filter-btn.active {
    background: rgba(0, 155, 62, 0.3);
    color: #f6fff8;
    border-color: rgba(0, 196, 106, 0.4);
  }

  .filter-divider {
    width: 1px;
    height: 24px;
    background: rgba(255, 255, 255, 0.1);
    margin: 0 0.5rem;
  }

  @media (max-width: 768px) {
    .filter-bar {
      flex-direction: column;
      padding: 0.75rem;
      gap: 0.75rem;
    }

    .filter-group {
      flex-wrap: wrap;
      justify-content: center;
    }

    .filter-divider {
      display: none;
    }

    .filter-btn {
      padding: 0.35rem 0.6rem;
      font-size: 0.65rem;
    }
  }
</style>
