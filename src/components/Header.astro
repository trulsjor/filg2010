---
/**
 * Page header with logo, title, and action buttons
 */
---

<header class="page-header">
  <img src="/fjellhammer-logo.svg" alt="Fjellhammer IL" width="120" height="120" loading="lazy" />
  <div class="header-text">
    <span>Fjellhammer IL</span>
    <h1>G2010</h1>
  </div>
  <div class="header-buttons">
    <button id="scroll-to-next" class="next-match-btn" aria-label="Gå til neste kamp">
      <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
        <polyline points="6 9 12 15 18 9"></polyline>
      </svg>
      <span>Neste kamp</span>
    </button>
    <a href="/calendar.ics" class="calendar-btn" aria-label="Abonner på kalender" title="Legg til i kalender">
      <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
        <line x1="16" y1="2" x2="16" y2="6"></line>
        <line x1="8" y1="2" x2="8" y2="6"></line>
        <line x1="3" y1="10" x2="21" y2="10"></line>
      </svg>
      <span>Kalender</span>
    </a>
    <a href="/statistikk" class="calendar-btn" aria-label="Se statistikk" title="Kampstatistikk">
      <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <line x1="18" y1="20" x2="18" y2="10"></line>
        <line x1="12" y1="20" x2="12" y2="4"></line>
        <line x1="6" y1="20" x2="6" y2="14"></line>
      </svg>
      <span>Statistikk</span>
    </a>
  </div>
</header>

<style>
  .page-header {
    position: sticky;
    top: 1rem;
    z-index: 20;
    display: flex;
    align-items: center;
    gap: 1.25rem;
    margin-bottom: 2.5rem;
    padding: 1rem 1.5rem;
    border-radius: 1.25rem;
    background: rgba(5, 17, 11, 0.92);
    border: 1px solid rgba(255, 255, 255, 0.05);
    box-shadow: 0 20px 45px rgba(0, 0, 0, 0.5);
    backdrop-filter: blur(8px);
  }

  .page-header img {
    width: 120px;
    height: 120px;
    filter:
      drop-shadow(0 0 20px rgba(0, 196, 106, 0.6))
      drop-shadow(0 0 40px rgba(0, 155, 62, 0.4))
      drop-shadow(0 0 60px rgba(0, 155, 62, 0.3))
      drop-shadow(0 10px 30px rgba(0, 0, 0, 0.4));
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .page-header img:hover {
    transform: scale(1.08) rotate(3deg);
    filter:
      drop-shadow(0 0 30px rgba(0, 196, 106, 0.8))
      drop-shadow(0 0 60px rgba(0, 155, 62, 0.6))
      drop-shadow(0 0 90px rgba(0, 155, 62, 0.4))
      drop-shadow(0 15px 40px rgba(0, 0, 0, 0.5));
  }

  .header-text {
    flex: 1;
  }

  .page-header h1 {
    font-size: clamp(2rem, 4vw, 3rem);
    color: #f6fff8;
    line-height: 1.1;
  }

  .page-header span {
    text-transform: uppercase;
    letter-spacing: 0.25em;
    font-size: 0.85rem;
    color: #a7c0b3;
    display: block;
  }

  .header-buttons {
    display: flex;
    gap: 0.5rem;
    align-items: center;
  }

  .next-match-btn {
    display: none;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    background: rgba(0, 155, 62, 0.1);
    color: rgba(246, 255, 248, 0.7);
    border: 1px solid rgba(0, 196, 106, 0.2);
    border-radius: 0.5rem;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    cursor: pointer;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    backdrop-filter: blur(4px);
  }

  .next-match-btn:hover {
    background: rgba(0, 155, 62, 0.2);
    border-color: rgba(0, 196, 106, 0.4);
    color: rgba(246, 255, 248, 0.9);
  }

  .next-match-btn:active {
    transform: scale(0.98);
  }

  .next-match-btn svg {
    width: 18px;
    height: 18px;
    animation: bounce 2s infinite;
  }

  @keyframes bounce {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(3px); }
  }

  .calendar-btn {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    background: rgba(0, 155, 62, 0.1);
    color: rgba(246, 255, 248, 0.7);
    border: 1px solid rgba(0, 196, 106, 0.2);
    border-radius: 0.5rem;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    cursor: pointer;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    backdrop-filter: blur(4px);
    text-decoration: none;
  }

  .calendar-btn:hover {
    background: rgba(0, 155, 62, 0.2);
    border-color: rgba(0, 196, 106, 0.4);
    color: rgba(246, 255, 248, 0.9);
  }

  .calendar-btn:active {
    transform: scale(0.98);
  }

  @media (max-width: 768px) {
    .page-header {
      padding: 0.75rem;
      margin-bottom: 1rem;
      flex-direction: column;
      gap: 0.5rem;
      align-items: center;
    }

    .page-header img {
      width: 60px;
      height: 60px;
    }

    .header-text {
      flex: none;
      width: 100%;
      text-align: center;
    }

    .page-header h1 {
      font-size: 1.4rem;
    }

    .page-header span {
      font-size: 0.7rem;
    }

    .next-match-btn {
      display: flex;
      width: auto;
      justify-content: center;
      font-size: 0.65rem;
      padding: 0.35rem 0.75rem;
    }

    .next-match-btn svg {
      width: 12px;
      height: 12px;
    }

    .header-buttons {
      flex-direction: row;
      gap: 0.5rem;
      width: 100%;
      justify-content: center;
    }

    .calendar-btn {
      display: flex;
      font-size: 0.65rem;
      padding: 0.35rem 0.75rem;
    }

    .calendar-btn svg {
      width: 12px;
      height: 12px;
    }
  }
</style>
