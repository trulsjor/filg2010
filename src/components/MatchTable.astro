---
/**
 * Desktop table view for matches
 */
import type { Match } from '../types/index.js';

interface Props {
  matches: Match[];
  hasMultipleTeams: boolean;
  getTeamColor: (teamName?: string) => string;
}

const { matches, hasMultipleTeams, getTeamColor } = Astro.props;
---

<div class="table-container" role="region" aria-label="Kampoversikt" tabindex="0">
  <table aria-label="Terminliste for Fjellhammer G2010">
    <thead>
      <tr>
        {hasMultipleTeams && <th>Lag</th>}
        <th>Dato</th>
        <th>Tid</th>
        <th>Hjemmelag</th>
        <th>Bortelag</th>
        <th>H-B</th>
        <th>Bane</th>
        <th>Turnering</th>
        <th>Kamp</th>
      </tr>
    </thead>
    <tbody>
      {matches.map((match) => {
        const isHome = match.Hjemmelag?.toLowerCase().includes('fjellhammer');
        const hasResult = match['H-B'] && match['H-B'].trim() !== '' && match['H-B'] !== '-';
        return (
          <tr
            data-team={match.Lag}
            data-location={isHome ? 'home' : 'away'}
            data-status={hasResult ? 'played' : 'upcoming'}
          >
            {hasMultipleTeams && (
              <td>
                <span class="team-indicator" style={`background-color: ${getTeamColor(match.Lag)}`}></span>
                <span class="team-name">{match.Lag}</span>
              </td>
            )}
            <td>{match.Dato}</td>
            <td>{match.Tid}</td>
            <td>
              {match['Hjemmelag URL'] ? (
                <a href={match['Hjemmelag URL']} target="_blank" rel="noopener noreferrer">
                  {match.Hjemmelag}
                </a>
              ) : (
                match.Hjemmelag
              )}
            </td>
            <td>
              {match['Bortelag URL'] ? (
                <a href={match['Bortelag URL']} target="_blank" rel="noopener noreferrer">
                  {match.Bortelag}
                </a>
              ) : (
                match.Bortelag
              )}
            </td>
            <td>{match['H-B'] && match['H-B'].trim() !== '' ? match['H-B'] : '-'}</td>
            <td>{match.Bane}</td>
            <td>
              {match['Turnering URL'] ? (
                <a href={match['Turnering URL']} target="_blank" rel="noopener noreferrer">
                  {match.Turnering}
                </a>
              ) : (
                match.Turnering
              )}
            </td>
            <td>
              {match['Kamp URL'] ? (
                <a href={match['Kamp URL']} target="_blank" rel="noopener noreferrer" class="match-link">
                  Se kamp
                </a>
              ) : (
                <span>-</span>
              )}
            </td>
          </tr>
        );
      })}
    </tbody>
  </table>
</div>

<style>
  .table-container {
    overflow-x: auto;
    margin-top: 1rem;
    background: linear-gradient(145deg, rgba(8, 25, 16, 0.95), rgba(4, 15, 9, 0.95));
    border-radius: 1.25rem;
    padding: 2rem;
    box-shadow:
      0 20px 60px rgba(0, 0, 0, 0.5),
      inset 0 1px 0 rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(0, 155, 62, 0.25);
    position: relative;
  }

  .table-container::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 3px;
    background: linear-gradient(90deg, var(--accent-dark), var(--accent), var(--accent-light), var(--accent), var(--accent-dark));
    border-radius: 1.25rem 1.25rem 0 0;
  }

  table {
    width: 100%;
    border-collapse: separate;
    border-spacing: 0 0.5rem;
    font-size: 0.9rem;
  }

  thead {
    position: sticky;
    top: 0;
    z-index: 10;
  }

  thead tr {
    background: linear-gradient(135deg, rgba(0, 155, 62, 0.15), rgba(0, 101, 43, 0.15));
    border: 1px solid rgba(0, 155, 62, 0.3);
  }

  th {
    padding: 1rem 0.75rem;
    text-align: left;
    font-weight: 700;
    text-transform: uppercase;
    font-size: 0.7rem;
    letter-spacing: 0.12em;
    white-space: nowrap;
    color: var(--accent-light);
    text-shadow: 0 0 15px rgba(0, 155, 62, 0.4);
    background: linear-gradient(135deg, rgba(0, 155, 62, 0.2), rgba(0, 101, 43, 0.2));
    border-bottom: 2px solid rgba(0, 155, 62, 0.4);
  }

  th:first-child {
    border-radius: 0.75rem 0 0 0.75rem;
  }

  th:last-child {
    border-radius: 0 0.75rem 0.75rem 0;
  }

  tbody tr {
    background: linear-gradient(135deg, rgba(0, 155, 62, 0.05), rgba(0, 101, 43, 0.05));
    border: 1px solid rgba(0, 155, 62, 0.15);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  tbody tr:hover {
    background: linear-gradient(135deg, rgba(0, 155, 62, 0.15), rgba(0, 101, 43, 0.15));
    transform: translateX(4px);
    box-shadow:
      -4px 0 0 var(--accent),
      0 4px 20px rgba(0, 155, 62, 0.3);
    border-color: rgba(0, 155, 62, 0.4);
  }

  td {
    padding: 1rem 0.75rem;
    color: #e5e7eb;
    background: transparent;
  }

  tbody tr td:first-child {
    border-radius: 0.75rem 0 0 0.75rem;
  }

  tbody tr td:last-child {
    border-radius: 0 0.75rem 0.75rem 0;
  }

  .team-indicator {
    display: inline-block;
    width: 8px;
    height: 8px;
    border-radius: 50%;
    margin-right: 0.4rem;
    vertical-align: middle;
    box-shadow: 0 0 12px currentColor, 0 0 4px currentColor;
  }

  .team-name {
    display: inline;
    font-weight: 700;
    font-size: 0.85rem;
    color: #f6fff8;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  td:nth-child(1) {
    text-align: left;
    font-weight: 600;
    white-space: nowrap;
  }

  td:nth-child(2), td:nth-child(3) {
    font-weight: 700;
    color: var(--accent-light);
    text-shadow: 0 0 10px rgba(0, 196, 106, 0.4);
    font-size: 0.95rem;
    white-space: nowrap;
  }

  td:nth-child(4), td:nth-child(5) {
    font-weight: 600;
    color: #f6fff8;
    max-width: 120px;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }

  td:nth-child(6) {
    font-weight: 800;
    color: var(--accent);
    text-shadow: 0 0 15px rgba(0, 155, 62, 0.5);
    font-size: 1.15rem;
    letter-spacing: 0.1em;
    white-space: nowrap;
  }

  td:nth-child(7) {
    max-width: 120px;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }

  td:nth-child(8) {
    max-width: 130px;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    direction: rtl;
    text-align: right;
  }

  td:nth-child(8) a {
    direction: rtl;
  }

  a {
    color: var(--accent-light);
    text-decoration: none;
    transition: all 0.2s;
    position: relative;
  }

  a:hover {
    color: white;
    text-shadow: 0 0 10px rgba(0, 196, 106, 0.5);
  }

  .match-link {
    display: inline-block;
    padding: 0.4rem 0.75rem;
    background: linear-gradient(135deg, var(--accent-dark) 0%, var(--accent) 50%, var(--accent-light) 100%);
    color: white;
    border-radius: 0.5rem;
    font-size: 0.7rem;
    font-weight: 700;
    text-decoration: none;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow:
      0 2px 12px rgba(0, 155, 62, 0.4),
      inset 0 1px 0 rgba(255, 255, 255, 0.2);
    text-shadow: none;
    letter-spacing: 0.05em;
    text-transform: uppercase;
    border: 1px solid rgba(0, 196, 106, 0.3);
    white-space: nowrap;
  }

  .match-link:hover {
    transform: translateY(-2px);
    box-shadow:
      0 4px 16px rgba(0, 155, 62, 0.6),
      inset 0 1px 0 rgba(255, 255, 255, 0.3);
    text-decoration: none;
    color: white;
    border-color: rgba(0, 196, 106, 0.5);
  }

  /* Hidden rows when filtered */
  :global(tr.filtered-out) {
    display: none !important;
  }

  @media (max-width: 1200px) {
    table {
      font-size: 0.85rem;
    }

    th, td {
      padding: 0.75rem 0.5rem;
    }
  }

  @media (max-width: 768px) {
    .table-container {
      display: none;
    }
  }
</style>
